{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Action": [
          "ssm:GetParameter",
          "ssm:GetParameters",
          "ssm:DescribeParameters"
        ],
        "Effect": "Allow",
        "Resource": "arn:aws:ssm:${aws_region}${account_id}*",
        "Condition": {
          "StringEquals": {
            "iam:PermissionsBoundary": "arn:aws:iam::${account_id}:policy/P3PowerUserAccess"
          }
        }
      }
    ]
  }